<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/TopLayout"
	android:background="@drawable/firstbackgroundeffects"
	android:backgroundTint="@color/accent">

	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_gravity="top"
		android:layout_width="match_parent"
		android:background="@android:color/transparent"
		android:layout_marginTop="13dp"
		android:layout_height="48dp"
		app:layout_collapseMode="pin">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:weightSum="1" 
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/LayoutLocation"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginStart="6dp" 
				android:visibility="invisible" > 
				<TextView
					android:id="@+id/LocationTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_Location"
					android:textSize="16sp"
					android:textStyle="bold"
					android:drawablePadding="5dp"
					android:drawableEnd="@drawable/dropdownBlack"
					android:layout_gravity="start|center" />
				<TextView
					android:id="@+id/LocationPlace"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="@string/Lbl_NearBy"
					android:layout_alignParentEnd="true"
					android:textSize="14sp"
					android:textColor="?attr/colorSecText"
					android:drawableTint="?attr/colorSecText"
					android:drawablePadding="5dp"
					android:drawableStart="@drawable/icon_place_vector" /> 
			</LinearLayout>
			<View
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/Filterbutton"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:background="@drawable/shape_radius_line_grey"
				android:src="@drawable/icon_filter_vector"
				android:tint="?attr/colorSecText"
				android:padding="10dp" />
			<ImageView
				android:id="@+id/coinImage"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:gravity="center"
				android:background="@drawable/shape_radius_btn"
				android:backgroundTint="?attr/colorFill"
				android:src="@drawable/icon_speed_vector"
				android:tint="@color/accent"
				android:padding="10dp"
				android:layout_marginEnd="10dp"
				android:layout_marginStart="10dp" />
		</LinearLayout>
	</androidx.appcompat.widget.Toolbar>

	<RelativeLayout
		android:id="@+id/CardViewBig"
		android:layout_width="match_parent"
		android:layout_height="match_parent" 
		android:layout_below="@id/toolbar"
		android:layout_gravity="center" 
		android:gravity="center" 
		android:clipToPadding="false"
		android:clipChildren="false">
		<QuickDate.Library.Anjo.CardStackView.CardStackView
			android:id="@+id/activity_main_card_stack_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="5dp"
			android:clipToPadding="false"
			android:elevation="2dp"
			android:layout_marginBottom="130dp"
			android:layout_marginStart="16dp"
			android:layout_marginEnd="16dp"
			android:layout_centerInParent="true"  /> 
		<ImageView
			android:id="@+id/userImageView"
			android:scaleType="centerCrop"
			android:layout_width="90dp"
			android:layout_height="90dp"
			android:focusable="false"
			android:tint="@color/gnt_white"
			android:focusableInTouchMode="false"
			android:clickable="false"
			android:src="@drawable/RemoteIcon"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true" 
			android:layout_gravity="center" />
		<ViewStub
			android:id="@+id/viewStub"
			android:inflatedId="@+id/subView"
			android:layout_marginTop="45dp"
			android:layout="@layout/EmptyStateLayout"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/buttonLayout"
		android:layout_alignParentBottom="true" 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingBottom="0dp"
		android:layout_marginBottom="78dp"
		android:gravity="center">
		<at.markushi.ui.CircleButton
			android:id="@+id/Undobutton1"
			android:layout_width="52dp"
			android:layout_height="50dp"
			app:cb_color="@color/accentLight"
			android:elevation="5dp"
			app:cb_pressedRingWidth="2dip"
			android:src="@drawable/icon_undo_vector"
			android:layout_marginEnd="5dp"
			android:layout_marginStart="5dp"
			android:tint="@color/accent" />
		<at.markushi.ui.CircleButton
			android:id="@+id/closebutton1"
			android:layout_width="52dp"
			android:layout_height="52dp"
			app:cb_color="@color/primaryLight"
			android:elevation="10dp"
			app:cb_pressedRingWidth="2dip"
			android:src="@drawable/icon_close_vector"
			android:layout_marginEnd="5dp"
			android:layout_marginStart="5dp"
			android:tint="@color/primaryDark"
			android:foregroundGravity="right" />
		<at.markushi.ui.CircleButton
			android:id="@+id/likebutton2"
			android:layout_width="52dp"
			android:layout_height="52dp"
			app:cb_color="@color/accent"
			app:cb_pressedRingWidth="2dip"
			android:src="@drawable/icon_like_vector"
			android:layout_marginEnd="5dp"
			android:layout_marginStart="5dp"
			android:tint="@color/gnt_white"
			android:elevation="10dp" />
	</LinearLayout>
</RelativeLayout>