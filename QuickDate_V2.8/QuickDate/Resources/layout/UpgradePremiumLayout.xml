<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:background="?attr/colorFill"
	android:padding="5dp"
	android:layout_marginEnd="0dp"
	android:layout_marginStart="0dp"
	android:layout_height="match_parent"> 
	<androidx.core.widget.NestedScrollView
		android:id="@+id/nested_scroll_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="?attr/colorFill"
		android:clipToPadding="false"
		android:scrollbars="none"
		android:scrollingCache="true"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">
		<LinearLayout
			android:id="@+id/lyt_form"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="0dp">
			<TextView
				android:id="@+id/mainText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="start"
				android:textAlignment="textStart"
				android:layout_marginTop="15dp"
				android:textStyle="bold"
				android:text="@string/Lbl_UpgradePremium"
				android:layout_marginStart="10dp"
				android:textSize="20sp"
				android:layout_marginBottom="0dp" />
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="?attr/colorSecText"
				android:gravity="start"
				android:textAlignment="textStart"
				android:layout_marginTop="8dp"
				android:text="@string/Lbl_UpgradePremiumMainText"
				android:layout_marginStart="10dp"
				android:layout_marginEnd="10dp"
				android:textSize="14sp"
				android:layout_marginBottom="0dp" />

			<TextView
				android:id="@+id/qusionText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="start"
				android:textAlignment="textStart"
				android:layout_marginTop="10dp"
				android:textStyle="bold"
				android:text="@string/Lbl_WhyChoosePremiumMembership"
				android:layout_marginStart="10dp"
				android:textSize="16sp"
				android:layout_marginBottom="0dp" />
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_margin="10dp"
				android:background="@drawable/EditTextStyleOne"
				android:backgroundTint="@color/accentLight">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="8dp" 
					android:layout_marginStart="10dp">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_marginEnd="10dp"
						android:tint="@color/accent"
						android:src="@drawable/icon_p_1_vector"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="14sp"
						android:text="@string/Lbl_SeeMoreStickers"/>

				</LinearLayout>
				 
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="8dp" 
					android:layout_marginStart="10dp">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_marginEnd="10dp"
						android:tint="@color/accent"
						android:src="@drawable/icon_p_2_vector"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="14sp"
						android:text="@string/Lbl_ShowInPremium"/>

				</LinearLayout>
				 
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="8dp" 
					android:layout_marginStart="10dp">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_marginEnd="10dp"
						android:tint="@color/accent"
						android:src="@drawable/icon_p_3_vector"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="14sp"
						android:text="@string/Lbl_SeeLikesNotifications"/>

				</LinearLayout>
				 
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="8dp" 
					android:layout_marginStart="10dp">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_marginEnd="10dp"
						android:tint="@color/accent"
						android:src="@drawable/icon_p_4_vector"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="14sp"
						android:text="@string/Lbl_GetDiscountBuyBoostMe"/>

				</LinearLayout>
				  
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="8dp" 
					android:layout_marginStart="10dp">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_marginEnd="10dp"
						android:tint="@color/accent"
						android:src="@drawable/icon_p_5_vector"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="14sp"
						android:text="@string/Lbl_DisplayFirstInFindMatches"/>

				</LinearLayout>
				   
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="8dp" 
					android:layout_marginStart="10dp">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_marginEnd="10dp"
						android:tint="@color/accent"
						android:src="@drawable/icon_p_6_vector"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="14sp"
						android:text="@string/Lbl_DisplayFirstInRandomUsers"/>

				</LinearLayout>
				    
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="8dp" 
					android:layout_marginStart="10dp">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_marginEnd="10dp"
						android:tint="@color/accent"
						android:src="@drawable/icon_p_7_vector"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="14sp"
						android:text="@string/Lbl_CreateUnlimitedVideoAndAudioCalls"/>

				</LinearLayout>
				     
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="8dp" 
					android:layout_marginStart="10dp">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_marginEnd="10dp"
						android:tint="@color/accent"
						android:src="@drawable/icon_p_8_vector"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="14sp"
						android:text="@string/Lbl_FindPotentialMatchesByCountry"/>

				</LinearLayout>
				      
			</LinearLayout>

			<RelativeLayout
				android:id="@+id/btnWeeklyLayout"
				android:layout_width="match_parent"
				android:layout_height="80dp"
				android:orientation="vertical"
				android:layout_margin="10dp"
				android:layout_gravity="center_vertical"
				android:gravity="center_vertical"
				android:paddingStart="10dp"
				android:paddingEnd="10dp"
				android:background="@drawable/EditTextStyleOne"
				android:backgroundTint="@color/accent">
				 
				<TextView
					android:id="@+id/SubWeekly"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_Weekly" 
					android:textFontWeight="500"
					android:textColor="@color/gnt_white"
					android:textSize="16dp"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical" />

				<TextView
					android:id="@+id/SaveWeekly"
					android:layout_below="@+id/SubWeekly"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Save 40%"
					android:textColor="@color/gnt_white"
					android:textSize="13dp"
					android:layout_gravity="start|center" />
				
				<TextView
					android:id="@+id/PriceWeekly"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/gnt_white"
					android:textSize="24dp"
					android:text="25"
					android:textStyle="bold"
					android:layout_centerVertical="true"
					android:layout_alignParentEnd="true"
					android:layout_gravity="center"/>
				  
			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/btnMonthlyLayout"
				android:layout_width="match_parent"
				android:layout_height="80dp"
				android:orientation="vertical"
				android:layout_margin="10dp"
				android:layout_gravity="center_vertical"
				android:gravity="center_vertical"
				android:paddingStart="10dp"
				android:paddingEnd="10dp"
				android:background="@drawable/EditTextStyleOne"
				android:backgroundTint="@color/primary">
				 
				<TextView
					android:id="@+id/SubMonthly"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_Monthly" 
					android:textFontWeight="500"
					android:textColor="@color/gnt_white"
					android:textSize="16dp"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical" />

				<TextView
					android:id="@+id/SaveMonthly"
					android:layout_below="@+id/SubMonthly"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Save 51%"
					android:textColor="@color/gnt_white"
					android:textSize="13dp"
					android:layout_gravity="start|center" />
				
				<TextView
					android:id="@+id/PriceMonthly"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/gnt_white"
					android:textSize="24dp"
					android:text="25"
					android:textStyle="bold"
					android:layout_centerVertical="true"
					android:layout_alignParentEnd="true"
					android:layout_gravity="center"/>
				  
			</RelativeLayout>
			
			<RelativeLayout
				android:id="@+id/btnYearlyLayout"
				android:layout_width="match_parent"
				android:layout_height="80dp"
				android:orientation="vertical"
				android:layout_margin="10dp"
				android:layout_gravity="center_vertical"
				android:gravity="center_vertical"
				android:paddingStart="10dp"
				android:paddingEnd="10dp"
				android:background="@drawable/EditTextStyleOne"
				android:backgroundTint="@color/primaryDark">
				 
				<TextView
					android:id="@+id/SubYearly"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_Yearly" 
					android:textFontWeight="500"
					android:textColor="@color/gnt_white"
					android:textSize="16dp"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical" />

				<TextView
					android:id="@+id/SaveYearly"
					android:layout_below="@+id/SubYearly"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Save 90%"
					android:textColor="@color/gnt_white"
					android:textSize="13dp"
					android:layout_gravity="start|center" />
				
				<TextView
					android:id="@+id/PriceYearly"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/gnt_white"
					android:textSize="24dp"
					android:text="25"
					android:textStyle="bold"
					android:layout_centerVertical="true"
					android:layout_alignParentEnd="true"
					android:layout_gravity="center"/>
				  
			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/btnLifetimeLayout"
				android:layout_width="match_parent"
				android:layout_height="80dp"
				android:orientation="vertical"
				android:layout_margin="10dp"
				android:layout_gravity="center_vertical"
				android:gravity="center_vertical"
				android:paddingStart="10dp"
				android:paddingEnd="10dp"
				android:background="@drawable/EditTextStyleOne"
				android:backgroundTint="#F5BB54">
				 
				<TextView
					android:id="@+id/SubLifetime"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/Lbl_Lifetime" 
					android:textFontWeight="500"
					android:textColor="@color/gnt_white"
					android:textSize="16dp"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical" />

				<TextView
					android:id="@+id/SaveLifetime"
					android:layout_below="@+id/SubLifetime"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Pay ones access for ever"
					android:textColor="@color/gnt_white"
					android:textSize="13dp"
					android:layout_gravity="start|center" />
				
				<TextView
					android:id="@+id/PriceLifetime"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/gnt_white"
					android:textSize="24dp"
					android:text="25"
					android:textStyle="bold"
					android:layout_centerVertical="true"
					android:layout_alignParentEnd="true"
					android:layout_gravity="center"/>
				  
			</RelativeLayout>

			<TextView
				android:id="@+id/skippButton"
				android:layout_height="48dp"
				android:layout_width="match_parent"
				android:text="@string/Btn_SkipPremium"
				android:textColor="?attr/colorSecText"
				android:textSize="16sp"
				android:layout_centerHorizontal="true"
				android:layout_centerVertical="true"
				android:clickable="true"
				android:textAllCaps="false"
				android:layout_margin="20dp"
				android:gravity="center"
				android:elevation="0dp" />
		</LinearLayout>
	</androidx.core.widget.NestedScrollView>
</LinearLayout>